{% macro cardSpice(spice) %}
    {% set color = spice.aromaticGroups.color %}

    <div class="card-wrap">
        <div class="card shadow-{{ color |trim('#')|upper}}">
            {# spice.filename ? #}
            <div class="card-bg" style="background-image: url(https://cdn.shopify.com/s/files/1/0083/1740/3187/products/GingembreenPoudreBio-amoseedsspecialistedessuperalimentsBio_600x.jpg?v=1678260355)"></div>
            <div class="card-info w-100">
                <h3 class="h1">{{ spice.name }}</h3>
                <p class="overflow-scroll" style="height: 50px;">{{ spice.description }}</p>
            </div>
        </div>
    </div>

{% endmacro %}