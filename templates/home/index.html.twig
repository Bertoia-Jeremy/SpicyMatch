{% extends 'base.html.twig' %}
{% import "component/_macro_card_spice.html.twig" as macroCardSpice %}

{% block title %}SpicyMatch - Présentation{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="container justify-content-center">
            <h2>Accueil - Présentation des épices</h2>
        </div>

        <div class="container">
            <div class="d-flex flex-wrap justify-content-around align-items-center">
                {% for spice in spices %}
                    <a href="{{ path('view_spice', {"id" : spice.id}) }}">
                        {{ macroCardSpice.cardSpice(spice) }}
                    </a>
                {% endfor %}
            </div>
            <div class="container justify-content-around">
                {{ knp_pagination_render(spices) }}
            </div>

        </div>
    </div>
{% endblock %}