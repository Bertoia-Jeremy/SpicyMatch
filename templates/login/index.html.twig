{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
    {% if error %}
        <div>{{ error.messageKey }}</div>
    {% endif %}

    <div class="d-flex">
        <div class="row col-6">
            <img src="{{ asset('build/images/login.png') }}" alt="Epices" class="img-fluid h-100">
        </div>
        <div class="row col-6 justify-content-center align-items-start">
                <div class="w-75 mb-4">
                    <h2 class="text-primary my-4">Connexion</h2>   
                </div>
                <form action="{{ path('app_login') }}" method="post" class="w-75 mb-4">
                    <div class="form-group my-2">
                        <label for="username">Pseudo :</label>
                        <input type="text" id="username" name="_username" value="{{ last_username }}" class="form-control">
                    </div>

                    <div class="form-group my-2">
                        <label for="password">Mot de passe :</label>
                        <input type="password" id="password" name="_password" class="form-control">
                    </div>

                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                    <input type="hidden" name="_target_path" value="/home">

                    <div class="d-flex justify-content-center my-4">
                        <button type="submit" class="btn btn-primary">Connexion</button>
                    </div>
                </form>
        </div>
    </div>
    
{% endblock %}
