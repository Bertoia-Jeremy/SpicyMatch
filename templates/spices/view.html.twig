{% extends 'base.html.twig' %}
{% block title %}SpiceMatch - Présentation{% endblock %}

{% block body %}
    {% set color = spice.aromaticGroups.color %}
    <div class="container-fluid">
        <h2 class="text-center">{{ spice.name }}</h2>
    </div>

    <div class="container">
        <div class="col-12 article-{{ color |trim('#')|upper}}">
            <h3>Description</h3>
            <p>{{ spice.description }}</p>
        </div>

        <div class="col-12">
            <div class="w-100 d-flex justify-content-center align-items-center">
                <div class="col-xs-12 col-6 article-{{ color |trim('#')|upper}}">
                    <h3>Groupe aromatique</h3>
                    <p>{{ spice.aromaticGroups.name }}</p>
                </div>
                <div class="col-xs-12 col-6 article-{{ color |trim('#')|upper}}">
                    <h3>Type d'épice</h3>
                    <p>{{ spice.spicyType.name }}</p>
                </div>
            </div>
        </div>

        <div class="col-12 article-{{ color |trim('#')|upper}}">
            <h3>Conseils de cuisine</h3>
            <p>{{ spice.cooking }}</p>
        </div>

        <div class="col-12">
            <div class="w-100 d-flex justify-content-center align-items-center">
                <div class="col-xs-12 col-6 article-{{ color |trim('#')|upper}}">
                    <h3>Composés</h3>
                    <ul>
                        {% for aromaticCompound in spice.aromaticsCompounds %}
                            <li>{{ aromaticCompound.name }}</li>
                        {% endfor %}
                    </ul>
                </div>
                <div class="col-xs-12 col-6 article-{{ color |trim('#')|upper}}">
                    <h3>Saveurs</h3>
                    <ul>
                        {% for aromaticCompound in spice.aromaticsCompounds %}
                            {% for flavor in aromaticCompound.AlchemyFlavors %}
                                <li>{{ flavor.name }}</li>
                            {% endfor %}
                        {% endfor %}
                    </ul>
                </div>
            </div>
        </div>

        <div class="col-12 article-{{ color |trim('#')|upper}}">
            <h3>Informations supplémentaires</h3>
            <p>{{ spice.informations }}</p>
        </div>
    </div>
{% endblock %}

